<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/menuImage"
        android:layout_width="139dp"
        android:layout_height="141dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/menuName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="Menu Title"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/menuImage"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/menuImage"
        app:layout_constraintTop_toBottomOf="@+id/imageView6"

        app:srcCompat="@drawable/location_dot_solid_full"
        app:tint="@color/subtitle_light" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toEndOf="@+id/menuImage"
        app:layout_constraintTop_toBottomOf="@+id/menuName"
        app:srcCompat="@drawable/stopwatch_solid_full"
        app:tint="@color/subtitle_light" />

    <TextView
        android:id="@+id/menuAwait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:text="15 min"
        android:textColor="@color/subtitle_light"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/imageView6"
        app:layout_constraintTop_toBottomOf="@+id/menuName" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="9dp"
        android:text="16 Ave Port Louis"
        android:textColor="@color/subtitle_light"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/menuAwait" />

    <TextView
        android:id="@+id/menuPrice"
        android:layout_width="61dp"

        android:layout_height="18dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:text="$15.00"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/menuImage"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <Button
        android:id="@+id/button"
        android:layout_width="78dp"
        android:layout_height="48dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="92dp"
        android:backgroundTint="@color/primary"
        android:text="Add"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/menuPrice"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>